{{!--  unordered list of projects that can expand to show the files in that project --}}
<div class="leftSideBar projectContainer">
<div class="container">
{{#each projects}}
  <div class="accordion-item">
    <h2 class="accordion-header" id="projectHeading{{@index}}">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#projectCollapse{{@index}}" aria-expanded="false" aria-controls="projectCollapse{{@index}}">
        {{name}}
      </button>
    </h2>
    <div id="projectCollapse{{@index}}" class="accordion-collapse collapse" aria-labelledby="projectHeading{{@index}}" data-bs-parent="#projectsAccordion">
      <div class="accordion-body">
        {{> files projectFiles=files}}
      </div>
    </div>
  </div>
{{/each}}
</div>
</div>
<div class="container">
  {{#each files}}
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{name}}
          </h3>
        </div>
      </div>
    </div>
  </div>
</div>
